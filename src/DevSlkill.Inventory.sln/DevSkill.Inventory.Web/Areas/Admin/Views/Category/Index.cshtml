@{
    ViewData["Title"] = "Item Category";
}

<section class="content">
    <div class="container-fluid">
        <partial name="./_CreateCategoryForm.cshtml" />
        <partial name="./_UpdateCategoryForm.cshtml" />
        <partial name="../Shared/PartialViews/_ResponsePartial.cshtml" />
        <partial name="../Shared/PartialViews/_DeleteModal.cshtml" />

        <div class="row">
            <div class="col-12">
                <!-- /.card -->
                <div class="card-header">
                    <div class="row">
                        <div class="col-sm-12 col-md-10">
                            <h3 class="card-title">Item Category List</h3>
                        </div>
                        <div class="col-sm-12 col-md-2 d-flex justify-content-end">
                            <a data-toggle="modal" data-target="#createCategoryModal" asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-sm btn-info">
                                <i class="bi bi-plus"></i>Add</a>
                        </div>
                    </div>
                </div>

                <!-- /.card-header -->
                <div class="card-body">
                    <table id="categoryTable" class="table table-sm table-hover">
                        <thead class="table-header">
                            <tr>
                                <th class="col-5">Name</th>
                                <th class="col-6">Description</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <!-- /.card-body -->
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

@section styles {
    <link rel="stylesheet" href="~/AdminLte/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/AdminLte/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/AdminLte/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
}

